{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true
    },
    "exclude": ["scripts", "src/pages/404.js"]
}
